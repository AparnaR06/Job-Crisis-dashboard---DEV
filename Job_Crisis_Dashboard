        "%%writefile app.py\n",
        "import streamlit as st\n",
        "import pandas as pd\n",
        "import matplotlib.pyplot as plt\n",
        "import seaborn as sns\n",
        "import numpy as np\n",
        "\n",
        "# Custom CSS for background and font\n",
        "st.markdown(\"\"\"\n",
        "    <style>\n",
        "        .main {\n",
        "            background-color: #0f1117;\n",
        "            color: white;\n",
        "        }\n",
        "        .reportview-container .markdown-text-container {\n",
        "            font-family: 'Segoe UI', sans-serif;\n",
        "        }\n",
        "        .stSlider > div > div > div {\n",
        "            background-color: #ff4b4b;\n",
        "        }\n",
        "    </style>\n",
        "\"\"\", unsafe_allow_html=True)\n",
        "\n",
        "st.set_page_config(page_title=\"Employment Dashboard\", layout=\"wide\")\n",
        "st.title(\"ğŸ“Š Employment Trend Dashboard\")\n",
        "st.markdown(\"Explore the employment distribution across various sectors ğŸ“ˆ\")\n",
        "\n",
        "# Sidebar Filters\n",
        "with st.sidebar:\n",
        "    st.markdown(\"### ğŸ“ Filter Options\")\n",
        "    year = st.slider(\"ğŸ“… Select Year\", 2010, 2025, 2018)\n",
        "    sector = st.selectbox(\"ğŸ­ Select Sector\", [\"Education\", \"IT\", \"Healthcare\", \"Manufacturing\"])\n",
        "    show_line = st.checkbox(\"ğŸ“ˆ Show Line Chart\")\n",
        "\n",
        "# Simulate dummy data\n",
        "np.random.seed(0)\n",
        "roles = [\"Analyst\", \"Consultant\", \"Engineer\", \"Manager\", \"Technician\"]\n",
        "data = pd.DataFrame({\n",
        "    \"Role\": roles,\n",
        "    \"Employment\": np.random.randint(200, 1000, size=len(roles))\n",
        "})\n",
        "\n",
        "# Show metrics\n",
        "st.subheader(f\"ğŸ“Œ Employment Metrics - {sector} ({year})\")\n",
        "cols = st.columns(len(roles))\n",
        "for i, role in enumerate(roles):\n",
        "    with cols[i]:\n",
        "        st.metric(label=role, value=f\"{data['Employment'][i]}\", delta=f\"{np.random.randint(-100,100)}\")\n",
        "\n",
        "# Chart Area\n",
        "st.subheader(f\"ğŸ“Š Employment Data for {sector} - {year}\")\n",
        "fig, ax = plt.subplots()\n",
        "sns.set_style(\"darkgrid\")\n",
        "\n",
        "if show_line:\n",
        "    sns.lineplot(data=data, x=\"Role\", y=\"Employment\", marker=\"o\", linewidth=2.5, color=\"cyan\", ax=ax)\n",
        "else:\n",
        "    sns.barplot(data=data, x=\"Role\", y=\"Employment\", palette=\"cool\", ax=ax)\n",
        "\n",
        "st.pyplot(fig)\n",
        "\n",
        "# Download CSV\n",
        "csv = data.to_csv(index=False).encode()\n",
        "st.download_button(\"ğŸ“¥ Download Data as CSV\", csv, \"employment_data.csv\", \"text/csv\", key='download-csv')\n"
      ],
